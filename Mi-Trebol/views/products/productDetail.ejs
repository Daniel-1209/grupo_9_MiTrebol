            <h2 class='cajas'>¿Qué hay en la caja?</h2>
            <p class='regala_caja_sorpresa'>lorem kskdnca akdocac aloena qeow fwe wc b egw ...</p>
            <div class='cajas_dispo'>
                <article id=caja_info_general>
                    <img class='imgPR' width=50% src='/img/caja_1.jpg' alt="Caja sorpresa amiges">
                    <div id='caja_general'>
                        <div id='info_producto'>
                            <p class='titulo_prod'>lorem en bold...</p>
                            <p class='texto_peque'>lorem normal...</p>
                        </div>
                    </div>
                </article>

                <article id=caja_info_general>
                    <img class='imgPR' src='/img/caja_2.jpg' alt="Caja sorpresa de bodas">
                    <div id='caja_general'>
                        <div id='info_producto'>
                            <p class='titulo_prod'>lorem en bold...</p>
                            <p class='texto_peque'>lorem normal...</p>
                        </div>
                    </div>
                </article>

                <article id=caja_info_general>
                    <img class='imgPR' src='/img/caja_3.jpg' alt="caja sorpresa parejas">
                    <div id='caja_general'>
                        <div id='info_producto'>
                            <p class='titulo_prod'>lorem en bold...</p>
                            <p class='texto_peque'>lorem normal...</p>
                        </div>
                    </div>
                </article>
            </div>
        </section>
        <!-- ------Footer -------->
        <%- include('../partials/footer') %>
</body>