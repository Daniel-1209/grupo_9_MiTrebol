</head>

<body>

  <header class="trebol">
    <div class="logos">
      <a href="/"><img class="logo" src="/img/logo.png" alt="logotipo de MiTrébol"></a>
      <h1 class="tienda">MiTrébol</h1>
    </div>

    <nav>
      <!-- <li><a href="#"><i class="fas fa-search"></i></a></li> -->
      <li><a href="/">Inicio</a></li>
      <!-- <li><a href="/products/create">Añadir productos <i class="fas fa-plus-circle"></i></a></li>
            <div class="dropdown"> -->
      <!-- <button class=" btn-secondari dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                    <img class="profile" src="/img/profile.png" alt="imagen de perfil"> 
                </button> -->
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><a class="dropdown-item" href="#">Cuenta</a></li>
        <li><a class="dropdown-item" href="#">MisProductos</a></li>
        <li><a class="dropdown-item" href="/login">Cerrar sesión</a></li>
      </ul>
      </div>
    </nav>
  </header>

  <section class="hero" id="inicio">
    <div class="background-image" style="background-image: url(/img/trebol.jpeg);"></div>
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel"> Modificar producto</h5>
          <!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> -->
        </div>
        <div class="modal-body">
          <div class="form-container">
            <form action="" method="">
              <div class="input">
                <div class="mb-3">
                  <label for="exampleFormControlInput1" class="form-label">Nombre del producto</label>
                  <input type="text" class="form-control" id="exampleFormControlInput1">
                </div>
                <div class="mb-3">
                  <label for="Descripción del producto" class="form-label">Descripción corta</label>
                  <textarea class="form-control" name="" rows="1"></textarea>
                </div>
                <div class="mb-3">
                  <label for="Descripción del producto" class="form-label">Descripción larga</label>
                  <textarea class="form-control" name="" rows="3"></textarea>
                </div>

                <div class="mb-3">
                  <label for="formFile" class="form-label">Modificar imagen</label>
                  <input class="form-control" type="file" name="formFile">
                </div>
                <div class="mb-3">
                  <select class="form-select" aria-label="Default select example">
                    <option selected>Categoría</option>
                    <option value="1">Jabones naturales</option>
                    <option value="2">Belleza al natural</option>
                    <option value="3">Semillas orgánicas</option>
                    <option value="3">Artesanías</option>
                    <option value="4">velas aromáticas</option>
                </div>
                </select>
                <div class="mb-3">
                  <select class="form-select" aria-label="Default select example">
                    <option selected>Cantidad</option>
                    <option value="1">1</option>
                    <option value="2">+5</option>
                    <option value="3">+10</option>
                  </select>
                </div>

                <div class="input-group mb-3">
                  <label for="formFile" class="form-label"></label>
                  <span class="input-group-text">$</span>
                  <input type="text" class="form-control" placeholder="Precio"
                    aria-label="Dollar amount (with dot and two decimal places)">
                </div>
              </div>


            </form>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary">Guardar cambios <i class="fas fa-plus-circle"></i></button>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->


  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

  <!-- Función modal -->
  <script>
    var myModal = document.getElementById('myModal')
    var myInput = document.getElementById('myInput')

    myModal.addEventListener('shown.bs.modal', function () {
      myInput.focus()
    })
  </script>
</body>

</html>