<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head') %>
        <link rel="stylesheet" href="/css/productCart.css">
        <title>Mi carrito</title>

    </head>
    
<body>
    <!-- Cabecera de la pagina-->
    <%- include('../partials/header') %>

    <!-- Cuerpo de la pagina-->
    <main>
        <div class="carrito">
            <!--MI CARRITO DE COMPRAS-->
            <h2 class="titulo">LISTA DE COMPRAS</h2>

                <section class="carro" > 
                    <article class="producto"> <a href="/productDetail">
                        <img src="/img/aceite_aguacate_rev.png" alt="articulo">
                        <strong>Aceite de Aguacate</strong>
                        <p>$ 150.00MXN</p>
                        <div class="cantidad">
                            <label for="canti">Cantidad De Productos: </label>
                            <input type="number" name="canti" id="can-pro" value="1">
                        </div>
                         
                            <input type="button" value="Eliminar" class="eliminar">
                        </a>
                    </article>

                    <article class="producto"> <a href="/productDetail">
                        <img src="/img/velas_rev.png" alt="articulo">
                        <strong>Velas florales</strong>
                        <p>$539.99MXN</p>
                        <div class="cantidad">
                            <label for="canti">Cantidad De Productos: </label>
                            <input type="number" name="canti" id="can-pro" value="1">
                        </div>
                         
                            <input type="button" value="Eliminar" class="eliminar">
                        </a>
                    </article>

                    

                </section>
        </div>
        

        <div class="totalPagar">
        
                <h2>TOTAL A PAGAR</h2>
                <h2>$ <span id="enteros"> 690</span>.<span id="decimales">000</span> </h2>
            

            <input type="button" value="PAGAR">
            
        </div>


    </main>
    
    <!-- Pie de la pagina-->
    
    <%- include('../partials/footer') %>

</body>
</html>