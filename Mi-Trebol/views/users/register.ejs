<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/head') %>
        <link rel="stylesheet" href="/css/register.css">
        <title>Registro</title>
</head>

<body>

    <!-- Cabecera de la pagina-->
    <%- include('../partials/header') %>

        <main>
            <div class="form-container">
                <form action="/users/register" method="POST" enctype="multipart/form-data">
                    <div class="head-register">
                        <h3>Registro</h3>
                    </div>
                    <div class="input">
                        <% if (locals.errors) {%>
                            <%for(error of errors ) { %>
                                <p>
                                    <%= error.msg %>
                                </p>
                                <% } %>
                                    <% } %>
                                        <input placeholder="Usuario" type="text" name="user"
                                            value="<%= locals.old && old.user ? old.user : '' %>" id="user">

                                        <input placeholder="Nombre" type="text" name="firstName" id="nombre"
                                            value="<%= locals.old && old.firstName ? old.firstName : '' %>" id="user">

                                        <input placeholder="Apellido" type="text" name="lastName" id="apellido"
                                            value="<%= locals.old && old.lastName ? old.lastName : '' %>" id="user">

                                        <input placeholder="Email" type="email" name="email" id="email"
                                            value="<%= locals.old && old.email ? old.email : '' %>" id="user">

                                        <input placeholder="Contraseña" type="password" name="password" id="password"
                                            minlength="6" value="<%= locals.old && old.password ? old.password : '' %>"
                                            id="user">

                                        <input placeholder="Repetir contraseña" type="password"
                                            name="password_confirmation" id="password_confirmation"
                                            value="<%= locals.old && old.password_confirmation ? old.password_confirmation : '' %>">
                                        <div>
                                            <label for="category">Categoría</label>
                                        </div>
                                        <select name="category" id="category">
                                            <option value="1" <%=locals.old && old.category==='1'
                                                ? 'selected' : '' %> >Vendedor</option>
                                            <option value="2" <%=locals.old && old.category==='2'
                                                ? 'selected' : '' %> >Comprador</option>
                                        </select>
                                        <div>
                                            <label>Foto de perfil</label>
                                        </div>
                                        <input type="file" name="avatar" id="file" single />
                    </div>
                    <div class="button">
                        <button type="submit">Registrarme</button>
                    </div>
            </div>
            </form>
        </main>

        <%- include('../partials/footer') %>
</body>

</html>