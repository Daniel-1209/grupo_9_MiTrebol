<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Fuente Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- Hoja de Estilos -->
    <title>.::MiTrébol::.</title>
    <link rel="stylesheet" href="/css/index.css">

</head>

<body>

    <header class="trebol">
        <div class="logos">
            <a href="/indexVendedor><img class="logo" src="/img/logo.png"
                    alt="logotipo de MiTrébol"></a>
            <h1 class="tienda">MiTrébol</h1>
        </div>

        <nav>
            <li><a href="#"><i class="fas fa-search"></i></a></li>
            <li><a href="/indexVendedor">Inicio</a></li>
            <li><a href="/indexVendedor/create">Añadir productos <i class="fas fa-plus-circle"></i></a>
            </li>
            <div class="dropdown">
                <button class=" btn-secondari dropdown-toggle" type="button" id="dropdownMenuButton1"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    <img class="profile" src="/img/avatars/<%= user.avatar %>" alt="imagen de perfil">
                    <%= user.firstName %>
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <li><a class="dropdown-item" href="#">Cuenta</a></li>
                    <li><a class="dropdown-item" href="#">MisProductos</a></li>
                    <form class="dropdown-item"  action="/close" method="POST">
                        <button type="submit">Cerrar sesión</button>
                    </form>
                </ul>
            </div>
        </nav>
    </header>

    <section class="hero" id="inicio">
        <div class="background-image" style="background-image: url(/img/trebol.jpeg);"></div>
        <h1>Bienvenido <%= user.firstName %>
        </h1>
        <h3> Velas Aromáticas DAN </h3>
    </section>


    <section class="categorias" id="categorias">
        <h3 class="title">Tus productos</h3>
        <hr>
        <!-- Parrilla de productos -->
        <div class="categorias-container">
            <div class="producto-cat">
                <a href="#"> <img class="img-categorias" src="/img/velas_rev.png" alt="Velas florales">
                    <h4 class="categoria">Velas Florales</h4>
                </a>
            </div>

            <div class="producto-cat">
                <a href="#"><img class="img-categorias" src="/img/portavela_rev.png" alt="Relajantes">
                    <h4 class="categoria">Aromas relajantes</h4>
                </a>
            </div>

            <div class="producto-cat">
                <a href="#"><img class="img-categorias" src="/img/vela_1.jpg" alt="Vela con rosas">
                    <h4 class="categoria">Aromas energéticos</h4>
                </a>
            </div>

            <div class="producto-cat">
                <a href="#"><img class="img-categorias" src="/img/vela_navidegna.jpeg" alt="vela con arbolito">
                    <h4 class="categoria">!De temporada!</h4>
                </a>
            </div>
        </div>
    </section>

    <!-- Información para el vendedor -->

    <section class="equipos" id="equipo">
        <h3 class="title">Resumen del mes</h3>
        <p>Encuentra más información a cerca de las ventas, comentarios y rating de tus productos.</p>
        <hr>

        <!-- Parrilla del Resumen del mes -->
        <div class="categorias-container">
            <div class="producto-cat-2">
                <a href="#"> <img class="img-categorias-2" src="/img/grafica-ventas.jpg" alt="Ventas por producto">
                    <h6 class="categoria">Ventas</h6>
                </a>
            </div>

            <div class="producto-cat-2">
                <a href="#"><img class="img-categorias-2" src="/img/grafica-reviews.jpg" alt="calificaciones">
                    <h6 class="categoria">Calificaciones</h6>
                </a>
            </div>

            <div class="producto-cat-2">
                <a href="#"><img class="img-categorias-2" src="/img/simbolo-comentarios.png" alt="comentarios">
                    <h6 class="categoria">Comentarios</h6>
                </a>
            </div>

            <div class="producto-cat-2">
                <a href="#"><img class="img-categorias-2" src="/img/grafico-stock.jpg" alt="Inventario">
                    <h6 class="categoria">Inventario</h6>
                </a>
            </div>
        </div>
    </section>

    <!-- Inventario  -->
    <section class="populares" id="populares">
        <h3 class="title">Inventario</h3>
        <p>Tus productos más vendidos, tenlos siempre disponibles.</p>
        <hr>
        <!-- Editar productos-->
        <div class="categorias-container-edit">


            <% for ( product of products ) { %>
                <% if (product.class == "velas-DAN") {%>
                <div class="producto-cat">
                    <div class="editar">
                        <a type="button" class="btn btn-primary" href="/products/edit/<%= product.id%>"><i
                                class="fas fa-pencil-alt"></i></a>
                    </div>

                    <a href="/products/detail/<%= product.id%>">
                        <img class="categoria-producto edit" src="/img/<%= product.imgs[0]%>" alt="">
                        <h4 class="categoria">
                            <%= product.title %>
                        </h4>
                    </a>
                    <p>
                        <%= product.shortdescription%>
                    </p>
                    <p>$<%= product.price%>MXN </p>
                    <p class="stars"><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i
                            class="fas fa-star"></i><i class="fas fa-star"></i></p>
                    <p class="valoracion">
                        <%= product.ratings%> valoraciones
                    </p>
                </div>
                <% } %>
                <% } %>

